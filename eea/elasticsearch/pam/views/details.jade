extends layout

mixin tr_th_td(item)
    if(item)
        tr
            th= item.label
            td= item.value

mixin td(item)
    if(item)
        td= item.value
    else
        td 

block content
    div(id="portal-breadcrumbs")
        span(id="breadcrumbs-you-are-here") You are here: 
        span(id="breadcrumbs-home")
            a(href="http://www.eea.europa.eu/") Home
            span(class="breadcrumbSeparator")  / 
        span(id="breadcrumbs-1")
            a(href="/pam") Climate change policies and measures in Europe
            span(class="breadcrumbSeparator")  / 
        span(id="breadcrumbs-2")
            span(class="breadcrumbs-current")=  data.Name_of_PAM.value

    h1= data.Name_of_PAM.value
    table(class="pam_detail_table datatable")
        colgroup
            col(style="width: 25%")
            col(style="width: 75%")
        +tr_th_td(data.Name_of_PAM)
        +tr_th_td(data.Country)
        +tr_th_td(data.Objective)
        +tr_th_td(data.Brief_description)
        +tr_th_td(data.Policy_Type_List)
        +tr_th_td(data.Status)
        +tr_th_td(data.Projections_scenario_in_which_the_PAM_is_included)

        //-
            +tr_th_td(data.PAMID)
            +tr_th_td(data.PAM_No)
            +tr_th_td(data.Country)

        +tr_th_td(data.Sector_List)
        +tr_th_td(data.Start_year_of_implementation)
        +tr_th_td(data.End_year_of_implementation)


    h2 Policy coverage
    table(class="pam_detail_table datatable")
        colgroup
            col(style="width: 25%")
            col(style="width: 75%")
        +tr_th_td(data.GHG_affected)
        +tr_th_td(data.Link_to_EU_Emissions_Trading_Scheme_EU_ETS)

    h2 Policy interactions
    table(class="pam_detail_table datatable")
        colgroup
            col(style="width: 25%")
            col(style="width: 75%")

    h2 Policy monitoring and evaluation
    table(class="pam_detail_table datatable")
        colgroup
            col(style="width: 25%")
            col(style="width: 75%")

    h2 'Ex-ante' estimate of the (projected) effect on GHG emissions and removals
    p Annual savings [kt CO
        sub 2 
        equivalent per year]
    table(class="pam_detail_table datatable")
        colgroup
            col(style="width: 25%")
            col(style="width: 25%")
            col(style="width: 25%")
            col(style="width: 25%")
        tr
            th Year
            th Total emissions
            th ETS sectors
            th Non-ETS sectors
        tr
            th 2010
            td
            td
            td
        tr
            th 2015
            +td(data.pam_2015_total_kt_CO2_equivalent_per_year)
            +td(data.pam_2015_EU_ETS_kt_CO2)
            +td(data.pam_2015_non_ETS_kt_CO2)
        tr
            th 2020
            +td(data.pam_2020_total_kt_CO2)
            +td(data.pam_2020_EU_ETS_kt_CO2)
            +td(data.pam_2020_non_ETS_kt_CO2)
        tr
            th 2025
            +td(data.pam_2025_total_kt_CO2)
            +td(data.pam_2025_EU_ETS_kt_CO2)
            +td(data.pam_2025_non_ETS_kt_CO2)
        tr
            th 2030
            +td(data.pam_2030_total_kt_CO2)
            +td(data.pam_2030_EU_ETS_kt_CO2)
            +td(data.pam_2030_non_ETS_kt_CO2)

    table(class="pam_detail_table datatable")
        colgroup
            col(style="width: 25%")
            col(style="width: 75%")
        +tr_th_td(data.Reference_source_of_estimation)

    h2 'Ex-post' estimate of the (current) effect on GHG emissions and removals
    table(class="pam_detail_table datatable")
        colgroup
            col(style="width: 25%")
            col(style="width: 75%")
        +tr_th_td(data.Years_for_which_reduction_applies)
        +tr_th_td(data.Average_emission_reduction_kt_CO2)
        +tr_th_td(data.Explanation_of_the__mitigation_estimates)
        +tr_th_td(data.Factors_affected_by_PAM)
        +tr_th_td(data.Estimate_include_reductions_related_to_common_and_coordinated_policies_and_measures)
        +tr_th_td(data.Documentation_Source_of_estimation)

    h2 Information on costs
    table(class="pam_detail_table datatable")
        colgroup
            col(style="width: 25%")
            col(style="width: 75%")
        +tr_th_td(data.Costs_in_EUR_per_tonne_CO2_eq_reduced_sequestered)
        +tr_th_td(data.Absolute_costs_per_year_in_EUR_specify_year_cost_has_been_calculated_for)
        +tr_th_td(data.Description_of_cost_estimates_Basis_for_cost_estimate)
        +tr_th_td(data.Documentation_Source_of_cost_estimation)


    h2 Other information
    table(class="pam_detail_table datatable")
        colgroup
            col(style="width: 25%")
            col(style="width: 75%")
        +tr_th_td(data.Comment_relevant_to_the_PAM)
        +tr_th_td(data.Check_of_mandatory_reporting)
        +tr_th_td(data.Comments_by_MS)
        +tr_th_td(data.Comments_relevant_to_the_policy)
        +tr_th_td(data.Companies_businesses_industrial_associations)
        +tr_th_td(data.Description_and_units)
        +tr_th_td(data.Information_about_non_GHG_mitigation_benefits_of_policies_and_measures)
        +tr_th_td(data.Local_government)
        +tr_th_td(data.Measure_interact_with_other_policies_and_measures_at_the_national_or_EU_level)
        +tr_th_td(data.Name_or_organisation)
        +tr_th_td(data.National_government)
        +tr_th_td(data.Others_not_listed)
        +tr_th_td(data.Policy_interactions_explanation)
        +tr_th_td(data.Primary_EU_policy_responsible_objectives)
        +tr_th_td(data.Regional_entities)
        +tr_th_td(data.Research_institutions)
        +tr_th_td(data.Secondary_EU_policy_responsible_objectives)
        +tr_th_td(data.Tertiary_EU_policy_responsible_objectives)

